<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.hig.prestigedevelopment.sprekigjovik"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="14"
        android:targetSdkVersion="17" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.hig.prestigedevelopment.sprekigjovik.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.hig.prestigedevelopment.sprekigjovik.Login"
            android:label="@string/title_activity_profile"
            android:windowSoftInputMode="adjustResize|stateVisible" >
        </activity>
        <activity
            android:name="com.hig.prestigedevelopment.sprekigjovik.Maps"
            android:label="@string/title_activity_maps"
            android:parentActivityName="MainActivity" >
        </activity>
        <activity
            android:name="com.hig.prestigedevelopment.sprekigjovik.Profile"
            android:label="@string/title_activity_profile"
            android:parentActivityName="MainActivity" >
        </activity>
        <activity
            android:name="com.hig.prestigedevelopment.sprekigjovik.DisplayTeam"
            android:label="@string/title_activity_display_team" >
        </activity>
        <activity
            android:name="com.hig.prestigedevelopment.sprekigjovik.TeamHighscore"
            android:label="@string/title_activity_team_highscore" >
        </activity>
    </application>

</manifest>
